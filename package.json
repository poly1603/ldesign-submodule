{
  "name": "@ldesign/submodule-manager",
  "version": "1.0.0",
  "type": "module",
  "description": "A powerful Git submodule management tool with CLI and Web UI",
  "main": "dist/core/index.js",
  "types": "dist/core/index.d.ts",
  "bin": {
    "lsm": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:web": "cd src/web && vite",
    "build": "npm run build:clean && npm run build:core && npm run build:web",
    "build:clean": "node -e \"const fs=require('fs');if(fs.existsSync('dist'))fs.rmSync('dist',{recursive:true})\"",
    "build:core": "tsc -p tsconfig.json",
    "build:web": "node scripts/build.cjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "prepare": "husky install",
    "verify": "node scripts/verify-package.cjs",
    "prepublishOnly": "npm run build && npm run verify"
  },
  "keywords": [
    "git",
    "submodule",
    "git-submodule",
    "cli",
    "manager",
    "tool",
    "web-ui"
  ],
  "author": "ldesign",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/submodule-manager.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "socket.io": "^4.6.2",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "p-limit": "^5.0.0",
    "yaml": "^2.3.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "open": "^9.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.0.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}